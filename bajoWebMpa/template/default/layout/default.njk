{% tag 'html', lang=lang, dataBsTheme=darkMode %}
  {% tag 'head' %}
    {% tag 'meta', charset='utf-8' %}{% endtag %}
    {% tag 'meta', name='viewport', content='width=device-width, initial-scale=1' %}{% endtag %}
    {% tag 'title'%}Bootstrap demo{% endtag %}
    {% for c in theme.css %}
      {% tag 'link', rel='stylesheet', href=c %}{% endtag %}
    {% endfor %}
    {% tag 'link', rel='stylesheet', href=assetDir('bajoWebBook') + '/css/book.css' %}{% endtag %}
    {% block css %}{% endblock %}
  {% endtag %}
  {% tag 'body', padding=0, margin=0 %}
    {% tag 'navbar', expand='large', bg='primary', sticky='top', dark=true, padding='y3' %}
      {% tag 'container', sizing='medium' %}
        {% tag 'navbarBrand' %}{{ site.title|d(siteInfo.title) }}{% endtag %}
        {% tag 'navbarToggler', collapseId='main-navs' %}{% endtag %}
        {% tag 'navbarCollapse', id='main-navs' %}
          {% tag 'navbarText' %}{{ 'Books'|t }}{% endtag %}
          <!--
          {% tag 'nav', flex='row,wrap' %}
            {% tag 'navItem' %}test{% endtag %}
          {% endtag %}
          -->
          {% tag 'nav', flex='row,wrap', margin='startAuto' %}
            {% tag 'navItem', href='#', icon='account' %}{% endtag %}
            {% tag 'navItem', href='?dark=' + (darkMode === 'light')|ternary('true', 'false'), icon=(darkMode === 'light')|ternary('darkMode', 'lightMode') %}{% endtag %}
          {% endtag %}
        {% endtag %}
      {% endtag %}
    {% endtag %}
    {% tag 'container', sizing='medium', margin='top3' %}
      {% block body %}{% endblock %}
    {% endtag %}
    {% for s in theme.script %}
      {% tag 'script', src=s %}{% endtag %}
    {% endfor %}
    {% block script %}{% endblock %}
  {% endtag %}
{% endtag %}
